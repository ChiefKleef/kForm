.form-input {
  border-right-width: 0px;
  border-left-width: 0px;
  border-top-width: 0px;
  border-bottom: 1px solid white;
  background-color: rgba(0,0,0,0);
  font-family: 'Raleway', sans-serif;
  font-weight: 400;
  font-size: 13pt;
  margin-left: 5px;
  margin-right: 5px;
  &:focus{
    border-image: linear-gradient(to left, #82E6E1, white) 0 0 100%;
    outline: none;
  }
}

.form {
  height: 100%;
  width: 90%;
  max-width: 500px;
  max-height: 500px;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 5px;
}

.form-input-container {
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  align-items: center;
}

.form-lns-container {
  height: 20%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}