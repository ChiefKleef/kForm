.form-input {
  border-right-width: 0px;
  border-left-width: 0px;
  border-top-width: 0px;
  background-color: rgba(0,0,0,0);
  &:focus{
    border-image: linear-gradient(to left, #82E6E1, white) 0 0 100%;
    outline: none;
  }
}

.form {
  height: 100%;
  width: 90%;
  max-width: 500px;
  max-height: 500px;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 5px;
  // border: 1px solid white;
}

.form-input-container {
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  // justify-content: space-between;
  align-items: center;
  .form-guide {
    width: 100%;
    font-size: 17pt;
    margin: 5pt;
    color: rgba(255,255,255,.7);
    letter-spacing: 2px;
    .fa {
      color: rgba(255,255,255,.8);
      font-size: 20pt;
    }
  }
  .form-guide-hobbies{
    margin-top: 30px;
  }
  .name-input-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    .name-input {
      flex-grow: 1;
      width: 50%;
      height: 30px;
      
      margin: 5px;
      font-size: 13pt;
      color: white;
      // &::-webkit-input-placeholder {
        // opacity: .7;
      // }
    }
  }
}

.form-lns-container {
  height: 20%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
}