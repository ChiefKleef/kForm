.form-guide {
    width: 100%;
    font-size: 17pt;
    font-family: 'Raleway', sans-serif;
    font-weight: 300;
    margin: 5pt;
    margin-bottom: 10px;
    color: rgba(255,255,255,.7);
    letter-spacing: 2px;
    .form-guide-icon {
      color: rgba(255,255,255,.65);
      font-size: 20pt;
    }
    .fa-warning {
      margin-left: 10px;
      color: tomato;
      font-size: 12pt;
    }
  }
  #form-guide-hobbies{
    margin-top: 30px;
  }

.warning-animation-enter {
  opacity: 0;
  transform: translateX(-20px);
}
.warning-animation-enter.warning-animation-enter-active {
  transition-duration: 0.2s;
  opacity: 1;
  transform: translateX(0px);
}
.warning-animation-leave {
  opacity: 1;
}
.warning-animation-leave.warning-animation-leave-active {
  transition-duration: 0.2s;
  opacity: 0;
  transform: translateX(-20px);
}