minHeight = 44px;

.hobby-animation-enter {
  opacity: 0;
  transform: translateX(-20px);
}
.hobby-animation-enter.hobby-animation-enter-active {
  transition-duration: 0.2s;
  opacity: 1;
  transform: translateX(0px);
}
.emptyMessage-animation-enter {
  opacity: 0;
}
.emptyMessage-animation-enter.emptyMessage-animation-enter-active {
  transition-duration: 0.2s;
  opacity: 1;
}
.emptyMessage-animation-leave {
  opacity: 1;
}
.emptyMessage-animation-leave.emptyMessage-animation-leave-active {
  transition-duration: 0.2s;
  opacity: 0;
}

.hobbies {
  position: relative;
  width: 100%;
  height: 100%;
  .hobbies-container {
    min-height: minHeight;
    max-height: 132px;
    .hobby-animation-tg {
      min-height: minHeight;
      max-height: 132px;
      display: flex;
      flex-wrap: wrap;
      flex-direction: row
      justify-content: flex-start;
      align-items: flex-start;
      overflow-y: auto;
    }
    .hobbies-container-emptyMessage {
      position: absolute;
      top: 0px;
      left: 0px;
      width: 100%;
      height: minHeight;
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
      justify-content: center;
      align-items: center;
      pointer-events: none;
      .hobbies-container-emptyMessage-text {
        letter-spacing: 2px;
        font-family: 'Raleway', sans-serif;
        font-weight: 200;
        font-style: italic;
        font-size: 13pt;
        color: rgb(115,115,115);
        user-select: none;
      }
    }
  }
  .hobbies-container-active {
    margin-bottom: 5px;
  }
  .hobbies-container-inactive {
    margin-bottom: 5px;
  }
}